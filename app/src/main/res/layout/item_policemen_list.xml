<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:elevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/policemanIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/jack" />

            <TextView
                android:id="@+id/policemanNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Jack Ryan"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/policemanIV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/policemanAreaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Vadodara city"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/policemanIV"
                app:layout_constraintStart_toEndOf="@+id/policemanIV"
                app:layout_constraintTop_toBottomOf="@+id/policemanDesignationTV" />

            <TextView
                android:id="@+id/policemanDesignationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Commisioner of police"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/policemanIV"
                app:layout_constraintTop_toBottomOf="@+id/policemanNameTV" />

            <ImageView
                android:id="@+id/phoneIconIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/round_phone_black_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/policemanIV" />

            <TextView
                android:id="@+id/policemanPhoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="9876543210"
                app:layout_constraintStart_toEndOf="@+id/phoneIconIV"
                app:layout_constraintTop_toBottomOf="@+id/policemanIV" />

            <TextView
                android:id="@+id/policemanEmailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="tai.arafat.at@gmail.com"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/policemanIV" />

            <ImageView
                android:id="@+id/emailIconIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/round_email_black_18"
                app:layout_constraintEnd_toStartOf="@+id/policemanEmailTV"
                app:layout_constraintTop_toBottomOf="@+id/policemanIV" />

            <TextView
                android:id="@+id/policemanRatingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorAccent"
                android:text="4.2 â˜…"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/locationIconIV"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/policemanAreaTV"
                app:layout_constraintTop_toBottomOf="@+id/policemanDesignationTV"
                app:srcCompat="@drawable/location_pin" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>